@model Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>zzzz</title>
</head>
<body>
    <div class="container">
        <form action="postForm" method="post">
            <label for="">Your Name:</label>
            <input asp-for="name" class="form-control">
            <span class="text-danger" asp-validation-for="name"></span>
            <label for="">Dojo Location:</label>
            <select asp-for="location" class="form-select">
                
                <option value="Chicago">Chicago</option>
                <option value="New York">New York</option>
                <option value="Los Angeles">Los Angeles</option>
            </select>
            <span class="text-danger" asp-validation-for="location"></span>
            <label for="">Favorite Language:</label>
            <select asp-for="language" class="form-select">
                <option value="C#">C#</option>
                <option value="HTML">HTML</option>
                <option value="Javascript">Javascript</option>
            </select>
            <span class="text-danger" asp-validation-for="language"></span>
            <label for="">Comments (optional)</label>
            <div class="form-floating">
                <textarea class="form-control" asp-for="comments" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Comments</label>
                <span class="text-danger" asp-validation-for="comments"></span>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary mt-3">
        </form>
    </div>
</body>
</html>